<h1>Edit Event</h1>

<form method="post" action="/events/edit">
    <div class="form-group">
        <label for="name" value="@ViewBag.eventToEdit.Name">Name</label>
        <input name="name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label for="description" value="@ViewBag.eventToEdit.Description">Description</label>
        <input name="description" type="text" class="form-control" />
    </div>
    <input type="submit" value="Edit Event" />
    <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
</form>
